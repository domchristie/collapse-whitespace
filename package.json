{
  "name": "collapse-whitespace",
  "version": "1.1.6",
  "description": "Remove unnecessary whitespace from an element.",
  "main": "lib/collapse-whitespace.umd.js",
  "module": "lib/collapse-whitespace.es.js",
  "jsnext:main": "lib/collapse-whitespace.es.js",
  "scripts": {
    "build-es": "rollup src/collapse-whitespace.js --o lib/collapse-whitespace.es.js --f es",
    "build-umd": "rollup src/collapse-whitespace.js --o lib/collapse-whitespace.umd.js -f umd --name 'collapseWhitespace'",
    "build": "npm run build-es && npm run build-umd",
    "prepare": "npm run build",
    "test": "standard ./src/**/*.js && echo 'Open test.html in your browser to run tests.'"
  },
  "keywords": [
    "browser",
    "collapse",
    "collapse-whitespace",
    "dom",
    "whitespace"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/lucthev/collapse-whitespace"
  },
  "author": "Luc Thevenard <lucthevenard@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lucthev/serialize/issues"
  },
  "homepage": "https://github.com/lucthev/serialize",
  "devDependencies": {
    "rollup": "^0.52.0",
    "standard": "^4.5.3"
  }
}
